<h1>Listing trips</h1>

<table>
  <thead>
    <tr>
      <th>Originnnnnnn</th>
      <th>Destination</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th>Number of people</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @trips.each do |trip| %>
      <tr>
        <td><%= trip.origin %></td>
        <td><%= trip.destination %></td>
        <td><%= trip.latitude %></td>
        <td><%= trip.longitude %></td>
        <td><%= trip.number_of_people %></td>
        <td><%= link_to 'Show', trip %></td>
        <td><%= link_to 'Edit', edit_trip_path(trip) %></td>
        <td><%= link_to 'Destroy', trip, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Trip', new_trip_path %>
